<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#C0C0C0"
    tools:context=".MainActivity">

    <!-- Top Action Bar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/te_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_arrow_back_ios_24"
            android:layout_alignParentStart="true" />

        <!-- Title -->
        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Favorit"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_centerInParent="true" />

        <!-- More Options Button -->
        <ImageView
            android:id="@+id/more_options_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/love"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <!-- Album Cover -->
    <ImageView
        android:id="@+id/album_cover"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"
        android:src="@drawable/bb"
        android:scaleType="fitCenter" />

    <!-- Song Title -->
    <TextView
        android:id="@+id/song_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hot coffee"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_below="@id/album_cover"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <!-- Artist Names -->
    <TextView
        android:id="@+id/artist_names"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3$"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_below="@id/song_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />

    <!-- Progress Bar -->

    <!-- Playback Controls -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="500dp"
        android:orientation="horizontal">

        <!-- Previous Button -->
        <ImageButton
            android:id="@+id/previous_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/baseline_menu_open_24"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <!-- Play/Pause Button -->
        <ImageButton
            android:id="@+id/play_pause_button"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/baseline_add_24"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />

        <!-- Next Button -->
        <ImageButton
            android:id="@+id/next_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/baseline_ios_share_24"
            android:background="?attr/selectableItemBackgroundBorderless" />
    </LinearLayout>

    <!-- Additional Controls -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="620dp"
        android:orientation="horizontal">

        <!-- Speaker Icon -->
        <ImageView
            android:id="@+id/speaker_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/speaker"
            android:layout_marginEnd="240dp" />

        <!-- Share Icon -->
        <ImageView
            android:id="@+id/share_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_ios_share_24"
            android:layout_marginStart="32dp" />
    </LinearLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/menu_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_background"
        android:elevation="2dp"
        app:itemIconSize="30dp"
        app:itemIconTint="@drawable/item_selector"
        app:itemRippleColor="@android:color/transparent"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/buttom_menu" />
</RelativeLayout>
